<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
      <tr><%= image_tag @user.get_profile_image, size:'100x100' %></tr>
      <tr>
	      <th>name</th>
	      <th><%= @user.name %></th>
      </tr>
      <tr>
	      <th>introduction</th>
	      <th><%= @user.introduction %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th><%= @user.followings.count %></th>
      </tr>
      <tr>
        <th>followers</th>
        <th><%= @user.followers.count %></th>
      </tr>
      </table>
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-outline-secondary btn-block" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-outline-secondary btn-block" %>
        <% end %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
    </div>
  </div>
</div>
