<h2>Books search for "<%= params[:word] %>"</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <thead>
      <tr>
        <th></th>
        <th>User Name</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size:"100x100" %></td>
          <td><%= link_to user.name, user %></td>
        </tr>
      <% end %>  
    </tbody>
  <% else %>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:"100x100" %><br></td>
          <td><%= link_to book.title, book %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>  
    </tbody>
  <% end %>  
</table>